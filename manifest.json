{
  "name": "Hide Scholar Recommendations",
  "version": "1.0",
  "description": "Optionally hide Google Scholar recommendations",
  "background": {
    "scripts": ["jquery.slim.min.js", "background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Toggle Google Scholar"
  },
  "icons": {
    "32": "images/icon_g.png",
    "64": "images/icon64_g.png"
  },
  "permissions": ["storage", "tabs", "*://*/*"],
  "manifest_version": 2
}